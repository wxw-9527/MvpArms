<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MvpArms" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 在视图上停用 Force Dark -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- 主色 -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 状态栏 -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Login" />

    <style name="Login.EditText">
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textColorHint">#FF7D8593</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>