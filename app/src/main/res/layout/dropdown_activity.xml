<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rouxinpai.arms.view.DropdownButton
        android:id="@+id/dropdown_menu1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="#26cc5c"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="展示下拉框1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/dropdown_menu2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.rouxinpai.arms.view.DropdownButton
        android:id="@+id/dropdown_menu2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="#26cc5c"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="展示下拉框2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdown_menu1" />
</androidx.constraintlayout.widget.ConstraintLayout>